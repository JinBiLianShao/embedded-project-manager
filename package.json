{
  "name": "embedded-project-manager",
  "version": "1.0.0",
  "description": "嵌入式开发项目管理系统",
  "license": "MIT",
  "author": "liansixin",
  "type": "commonjs",
  "main": "./main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "cnpm": "^9.4.0",
    "iconv-lite": "^0.7.0"
  },
  "devDependencies": {
    "app-builder-lib": "^26.0.12",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "^26.0.12",
    "electron-winstaller": "^5.4.0",
    "node-gyp": "^10.2.0",
    "node-gyp-build": "^4.8.1",
    "rimraf": "^2.6.3",
    "temp": "^0.9.4"
  },
  "build": {
    "productName": "embedded-project-manager",
    "appId": "com.embedded-project-manager",
    "directories": {
      "output": "app_file"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./main.ico",
      "uninstallerIcon": "./main.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "embedded-project-manager"
    },
    "win": {
      "icon": "./main.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "./icons",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "maintainer": "liansixin <2013182991@qq.com>"
    }
  }
}
